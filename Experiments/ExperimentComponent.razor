@using sip.Experiments.Model
@using sip.Experiments.Setup

@if (Exp.State == ExpState.Idle)
{
    <ExperimentIdle  Exp="Exp" ExpMeta="@ExpMeta"></ExperimentIdle>
}
else
{
    <ExperimentRunning  Exp="Exp"></ExperimentRunning>
}

@code {

    [Parameter]
    public Experiment Exp { get; set; } = null!;

    [Parameter]
    public ExperimentOptions ExpMeta { get; set; } = null!;
    
}